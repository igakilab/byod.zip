#!/bin/bash
#
# Written by Yasuharu Mizutani.

usage(){
    cat <<-EOF
	
	使い方:
	  getkadaiS
	
	サーバ上のkadaiディレクトリを，このPC上のホームディレクトリの下に
	あるkadaiディレクトリ（~/kadai）にコピーします．
    通常のgetkadaiと異なり，内部でscpを用います．
	
	EOF
}

if [ "$#" -ne 0 ]; then
    usage
    exit 0
fi

id="`/usr/local/bin/oitname`" || exit 1
rhost="`/usr/local/bin/kadaihost`"

scp -pr ${id}@${rhost}:kadai/java18/javaexc/ ~/

exit $?
