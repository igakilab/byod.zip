#!/bin/bash
#
# Written by Yausharu Mizutani
# Modified by Hiroshi Igaki

# 古いjava_bash_historyはローカルから削除（2ヶ月以上前）
this_month=`date +'%Y%m'`
last_month=`date -d "${this_month}01 1 month ago" +'%Y%m'`
find ~/kadai/`/usr/local/bin/course`/ -name ".java_bash_history*" -not -name ".java_bash_history.${this_month}" -not -name ".java_bash_history.${last_month}" -exec rm {} \;

if [ -f ~/.oitname ]; then
    id="`cat ~/.oitname`"
else
    echo "最初に initssh コマンドを実行してください" 1>&2
    exit 1
fi

case "${id}" in
  e1??????|t???????)
    ;;
  *)
    echo "ユーザ名($id)が e1xxxxxx の形式ではありません" 1>&2
    echo "initssh コマンドを実行してください" 1>&2
    exit 1
    ;;
esac

echo ${id}
exit 0
