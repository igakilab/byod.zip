#!/bin/bash
#
# Written by Yasuharu Mizutani.
# Modified by Hiroshi Igaki

usage(){
    cat <<-EOF
	
	使い方:
	    getlocal
	
	/usr/localを更新する．
	
	EOF
}

GB='\e[1;32m'
GE='\e[m'
RB='\e[1;31m'
RE='\e[m'

if [ "$#" -ge 1 ]; then
    case "$1" in
        -h|-help|--help)
            usage
            exit 0
            ;;
        -v|-version)
            echo 20191120
            exit 0
            ;;
        *)
            usage
            exit 1
            ;;
    esac
fi

id="`/usr/local/bin/oitname`" || exit 1
rhost="`/usr/local/bin/kadaihost`"
localdir="/home/teachers/t2015025/public_html/progjava/local"

if [ $(echo $(expr $(date +%s) - $(sshrun date +%s) ) | tr -d '-') -gt 30 ]; then
  echo -e "${RB}時計がずれすぎているためgetlocalが失敗しました．${RE}Windowsの時計を正しく設定してから再実行してください"
  exit 2
fi

echo "/usr/localを更新します．"
rsync --timeout=15 -av --delete "${id}"@${rhost}:${localdir}/ /usr/local/

profiledir="/home/teachers/t2015025/public_html/progjava/etc/profile.d"
echo "profile.dを更新します．"
rsync --timeout=15 -av --delete "${id}"@${rhost}:${profiledir}/ /etc/profile.d/

getversion >> ~/kadai/$COURSEYEAR/.log/.version.history

exit $?
