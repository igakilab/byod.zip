#!/bin/bash
#
# Written by Yasuharu Mizutani.

usage(){
    cat <<-EOF
	
	使い方:
	  getkadai 
	
	サーバ上のkadai/java18/javaexcディレクトリを，このPC上のホームディレクトリの下に
	あるjavaexcディレクトリ（~/javaexc）にコピーします．
	
	EOF
}

if [ "$#" -ne 0 ]; then
    usage
    exit 0
fi

id="`/usr/local/bin/oitname`" || exit 1
rhost="`/usr/local/bin/kadaihost`"

rsync --timeout=15 --force -avu ${id}@${rhost}:kadai/java18/ ~/

exit $?
