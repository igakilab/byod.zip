#!/bin/bash
#
# Written by Yasuharu Mizutani.

usage(){
    cat <<-EOF
	
	使い方:
	  getkadai 
	
	サーバ上のkadaiディレクトリを，このPC上のホームディレクトリの下に
	あるkadaiディレクトリ（~/kadai）にコピーします．
	
	EOF
}

if [ "$#" -ne 0 ]; then
    usage
    exit 0
fi

id="`getoitname`" || exit 1
rhost="`getkadaihost`"

if [ ! -d ~/kadai ]; then
    mkdir ~/kadai
fi
rsync -av ${id}@${rhost}:kadai ~/
exit $?

