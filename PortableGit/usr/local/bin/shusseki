#!/bin/sh

echo "出席スクリプトを起動します．"
echo "今日の意気込みを一言入力してください（1行のみ）． "
echo -n "> "
read input

IPADDR="`/c/Windows/System32/ipconfig |nkf -w |grep IPv4 |grep 150.89 |sed -e 's/^.*: //'`"

trap "echo '授業を終了します'; exit 0" 2 15

[[ ! -d ~/kadai ]] && mkdir -p ~/kadai
echo "`date +'%Y-%m-%dT%H:%M:%S'` ${IPADDR} : $input" >> ~/kadai/.message.txt


echo "==== putkadaiコマンドで定期的に課題を提出します ===="
INTERVAL="60"
while :; do
    putkadai |grep -v 'message\.txt' |grep -v '^[ 	]*$'
    echo "${INTERVAL}秒後に再度自動提出します"
    sleep ${INTERVAL}
    echo
done
