#!/bin/bash
#
# Written by Yasuharu Mizutani.
# Modified by Hiroshi Igaki

usage(){
    cat <<-EOF
	
	使い方:
	    getjava
	
	~/kadai/$COURSEYEAR/を更新する．
	
	EOF
}

GB='\e[1;32m'
GE='\e[m'
RB='\e[1;31m'
RE='\e[m'

if [ "$#" -ge 1 ]; then
    case "$1" in
        -h|-help|--help)
            usage
            exit 0
            ;;
        -v|-version)
            echo 20191120
            exit 0
            ;;
        *)
            usage
            exit 1
            ;;
    esac
fi

id="`/usr/local/bin/oitname`" || exit 1
rhost="`/usr/local/bin/kadaihost`"
javadir="/home/teachers/t2015025/public_html/progjava/$COURSEYEAR/"

# Hidden setting
/c/Windows/System32/attrib.exe +H ~/kadai/${COURSEYEAR}/.log 1>> "$HISTFILE" 2>&1

if [ $(echo $(expr $(date +%s) - $(sshrun date +%s) ) | tr -d '-') -gt 30 ]; then
  echo -e "${RB}時計がずれすぎているためgetjavaが失敗しました．${RE}Windowsの時計を正しく設定してから再実行してください"
  exit 2
fi

echo "~/kadai/${COURSEYEAR}/を更新します．"
rsync --timeout=15 -a -zz "${id}"@${rhost}:${javadir} ~/kadai/${COURSEYEAR}/

JSVERSION=`cat ~/kadai/$COURSEYEAR/.log/.version`\#`date +%s`
echo ${JSVERSION} >> ~/kadai/$COURSEYEAR/.log/.version.history

exit $?
